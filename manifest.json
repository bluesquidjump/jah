{
  "manifest_version": 2,
  "name": "JAH - JA4 Hash Enrichment",
  "version": "1.1.1",
  "description": "Enrich JA4 fingerprint hashes with threat intelligence using Claude AI",
  "author": "Security Tools",
  "browser_specific_settings": {
    "gecko": {
      "id": "jah@security-tools.local",
      "strict_min_version": "91.0"
    }
  },
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "https://api.anthropic.com/*",
    "https://ja4db.com/*"
  ],
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "background": {
    "scripts": [
      "lib/ja4-parser.js",
      "lib/ja4db-client.js",
      "lib/claude-api.js",
      "lib/mcp-client.js",
      "background/background.js"
    ]
  },
  "sidebar_action": {
    "default_title": "JAH - JA4 Enrichment",
    "default_panel": "sidebar/sidebar.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/ja4-parser.js", "content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "icons/ja4-fox-flag.png"
  ]
}
